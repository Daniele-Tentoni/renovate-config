{
  ignoreDeps: [
    "DBI::DBD",
    "IPC::Open3",
    "Net::DNS::Nameserver",
    "Statistics::PointEstimation",
    "Text::LineFold",
    "Unicode::GCString",
  ],
  regexManagers: [
    {
      fileMatch: ["(^|/)cpanfile$"],
      matchStrings: [
        "(# renovate-repology:( repository=(?<repository>.*?))?( distribution=(?<distribution>.*?))?)?\\s*(requires|suggests)\\s*'(?<_depName>.*?)',\\s*'(>|>=|==)?\\s*v?(?<currentValue>.*)';",
      ],
      datasourceTemplate: "repology",
      depNameTemplate: "{{#if distribution}}{{{distribution}}}/{{{_depName}}}{{else}}{{{_depName}}}{{/if}}",
      packageNameTemplate: "{{#if repository}}{{{repository}}}{{else}}metacpan{{/if}}/perl:{{#if distribution}}{{{lowercase distribution}}}{{else}}{{{lowercase (replace '(::|_)' '-' _depName)}}}{{/if}}",
      versioningTemplate: "loose",
      extractVersionTemplate: "^v?(?<version>.*)$",
    },
  ],
  packageRules: [
    {
      matchDatasources: ["repology"],
      // https://docs.renovatebot.com/configuration-options/#prbodydefinitions
      prBodyDefinitions: {
        Package: "[{{{replace '.+\\/' '' depName}}}](https://metacpan.org/pod/{{{replace '.+\\/' '' depName}}}) ([Changes](https://metacpan.org/dist/{{{replace '::' '-' (replace '\\/.+' '' depName)}}}/changes))",
      },
      // https://docs.renovatebot.com/configuration-options/#commitmessagetopic
      commitMessageTopic: "dependency {{{replace '.+\\/' '' depName}}}",
    },
    {
      matchDatasources: ["repology"],
      matchPackagePatterns: ["^HTTP::Message$", "^HTTP-Message/"],
      groupName: "HTTP-Message",
    },
    {
      matchDatasources: ["repology"],
      matchPackagePrefixes: ["IO/"],
      groupName: "IO",
    },
    {
      matchDatasources: ["repology"],
      matchPackagePrefixes: ["IO-Compress/"],
      groupName: "IO-Compress",
    },
    {
      matchDatasources: ["repology"],
      matchPackagePrefixes: ["Test-Simple/"],
      groupName: "Test-Simple",
    },
    {
      matchDatasources: ["repology"],
      matchPackagePrefixes: ["Test2-Suite/"],
      groupName: "Test2-Suite",
    },
    {
      matchDatasources: ["repology"],
      matchPackagePatterns: ["^URI(/|$)"],
      groupName: "URI",
    },
  ],
}
